HL_PRIVATE_KEY=your_wallet_private_key_here
HL_TESTNET=true_or_false
HL_WALLET_ADDRESS=your_wallet_address_here_0x..

# DeepSeek (прямой провайдер, OpenAI-совместимый)
AI_API_KEY=your_ai_api_key_here
AI_BASE_URL=api_base_url_here
#deepseek-reasoner 
AI_MODEL=ai_model_name_here

MONGO_URI=your_mongo_atlas_connection_string_here
# symbols
HL_SYMBOLS=BTC-PERP,ETH-PERP,SOL-PERP,BNB-PERP,NEAR-PERP,DOGE-PERP

#5 minutes loop
POLL_INTERVAL_MS=300000
#'ignore' | 'update_tp_sl' | 'flip_if_confident' | 'flip_and_update'   
SIGNAL_POLICY=flip_and_update
MIN_OPEN_CONFIDENCE=0.65
FLIP_CONFIDENCE=0.65

# Risk management
ACCEPT_MODEL_SIZING=true
# fixed | risk_pct
POSITION_MODE=risk_pct
# для fixed   
POSITION_USD=11
MIN_ORDER_USD=10.5
MAX_ORDER_USD=100
# % risk от accountValue для risk_pct         
RISK_PCT=0.05
RISK_PCT_MIN=0.02
RISK_PCT_MAX=0.07

# risk/targets/slippage 
DEFAULT_TP_PCT=0.8
DEFAULT_SL_PCT=0.4
MAX_SLIPPAGE_PCT=0.2
ENTRY_SLIPPAGE_PCT=0.05
MAX_ENTRY_SLIPPAGE_BPS=20
ENTRY_EPS_TICKS=1

# Leverage
LEVERAGE_MAX=3
#'isolated' | 'cross'
LEVERAGE_MODE='isolated' 
SYNC_LEVERAGE=true

# TF and  history depth
INTRADAY_INTERVAL=3m
# 120*3m ≈ 6 hours
INTRADAY_POINTS=120
# 200*4h ≈ 33 days
FOUR_HOURS_POINTS=200

